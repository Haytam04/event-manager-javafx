<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<VBox spacing="20" alignment="TOP_LEFT" xmlns="http://javafx.com/javafx/21"
      xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.eventmanager.controller.EventFormController"
      style="-fx-padding: 40; -fx-background-color: white;" stylesheets="@../css/style.css" prefWidth="450">

    <Label text="Event Details" style="-fx-font-size: 24; -fx-font-weight: bold; -fx-text-fill: #6200EE;"/>

    <VBox spacing="5">
        <Label text="Title" style="-fx-font-weight: bold; -fx-text-fill: #757575;"/>
        <TextField fx:id="txtTitle" promptText="Enter event name" styleClass="text-field" />
    </VBox>

    <VBox spacing="5">
        <Label text="Location" style="-fx-font-weight: bold; -fx-text-fill: #757575;"/>
        <TextField fx:id="txtLocation" promptText="City, Venue..." styleClass="text-field" />
    </VBox>

    <VBox spacing="5">
        <Label text="Event Image" style="-fx-font-weight: bold; -fx-text-fill: #757575;"/>
        <HBox spacing="10">
            <TextField fx:id="txtImageUrl" promptText="No file selected" editable="false" HBox.hgrow="ALWAYS" styleClass="text-field" />
            <Button text="Browse" onAction="#handleSelectImage" style="-fx-background-color: #e0e0e0;" />
        </HBox>
    </VBox>

    <VBox spacing="5">
        <Label text="Category" style="-fx-font-weight: bold; -fx-text-fill: #757575;"/>
        <ComboBox fx:id="comboCategory" promptText="Select a category" prefWidth="450" styleClass="combo-box" />
    </VBox>

    <HBox spacing="20">
        <VBox spacing="5" HBox.hgrow="ALWAYS">
            <Label text="Date" style="-fx-font-weight: bold; -fx-text-fill: #757575;"/>
            <DatePicker fx:id="datePicker" prefWidth="200" />
        </VBox>
        <VBox spacing="5" HBox.hgrow="ALWAYS">
            <Label text="Max Participants" style="-fx-font-weight: bold; -fx-text-fill: #757575;"/>
            <Spinner fx:id="spinMaxParticipants" editable="true" prefWidth="200" />
        </VBox>
    </HBox>

    <HBox spacing="15" alignment="CENTER_RIGHT" style="-fx-padding: 20 0 0 0;">
        <Button text="Cancel" onAction="#handleCancel" prefWidth="100" prefHeight="35" style="-fx-background-color: transparent;" />
        <Button text="SAVE EVENT" onAction="#handleSave" styleClass="button-primary" prefWidth="140" prefHeight="40"/>
    </HBox>
</VBox>