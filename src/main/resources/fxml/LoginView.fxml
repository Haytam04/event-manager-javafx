<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<VBox alignment="CENTER" spacing="25.0" xmlns="http://javafx.com/javafx/21"
      xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.eventmanager.controller.LoginController"
      style="-fx-background-color: #f0f2f5;" stylesheets="@../css/style.css">

    <VBox alignment="CENTER" spacing="20" maxWidth="350"
          style="-fx-background-color: white; -fx-padding: 40; -fx-background-radius: 15; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 20, 0, 0, 10);">

        <Label text="EventHub" style="-fx-font-size: 32px; -fx-font-weight: bold; -fx-text-fill: #6200EE;" />
        <Label text="Please log in to continue" style="-fx-text-fill: #757575;" />

        <TextField fx:id="txtUsername" promptText="Username" styleClass="text-field" />
        <PasswordField fx:id="txtPassword" promptText="Password" styleClass="text-field" />

        <VBox spacing="10" alignment="CENTER">
            <Button text="LOGIN" onAction="#handleLogin" styleClass="button-primary" prefWidth="250" prefHeight="40"/>
            <Button text="Create an Account" onAction="#handleSignUp" style="-fx-background-color: transparent; -fx-text-fill: #6200EE; -fx-cursor: hand;" />
        </VBox>

        <Label fx:id="lblMessage" style="-fx-text-fill: #B00020;" />
    </VBox>
</VBox>