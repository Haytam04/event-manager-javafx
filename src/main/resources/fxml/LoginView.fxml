<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<VBox alignment="CENTER" spacing="25.0" xmlns="http://javafx.com/javafx/21"
      prefHeight="650.0" prefWidth="750.0"
      xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.eventmanager.controller.LoginController"
      style="-fx-background-color: #f0f2f5;" stylesheets="@../css/style.css">

    <VBox alignment="CENTER" spacing="30" maxWidth="400" maxHeight="500"
          style="-fx-background-color: white; -fx-padding: 50; -fx-background-radius: 15; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 20, 0, 0, 10);">

        <VBox alignment="CENTER" spacing="10">
            <Label text="EventHub" style="-fx-font-size: 36; -fx-font-weight: bold; -fx-text-fill: -fx-primary;"/>
            <Label text="Welcome back! Please sign in." style="-fx-text-fill: -fx-text-secondary; -fx-font-size: 14;"/>
        </VBox>

        <Label fx:id="lblMessage" style="-fx-text-fill: #f44336; -fx-font-size: 13;" wrapText="true" />

        <VBox spacing="15">
            <VBox spacing="5">
                <Label text="Username" style="-fx-font-weight: bold; -fx-text-fill: -fx-text-secondary;"/>
                <TextField fx:id="txtUsername" promptText="Enter your username" styleClass="text-field" />
            </VBox>

            <VBox spacing="5">
                <Label text="Password" style="-fx-font-weight: bold; -fx-text-fill: -fx-text-secondary;"/>
                <PasswordField fx:id="txtPassword" promptText="Enter your password" styleClass="text-field" />
            </VBox>
        </VBox>

        <VBox spacing="15" alignment="CENTER">
            <Button text="LOGIN" onAction="#handleLogin" prefWidth="Infinity" styleClass="button-primary" />
            <HBox alignment="CENTER" spacing="5">
                <Label text="Don't have an account?" />
                <Button text="Sign Up" onAction="#handleSignUp" style="-fx-background-color: transparent; -fx-text-fill: -fx-primary; -fx-font-weight: bold; -fx-cursor: hand;"/>
            </HBox>
        </VBox>
    </VBox>
</VBox>